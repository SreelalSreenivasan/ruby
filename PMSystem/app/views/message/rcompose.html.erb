<br>
<h2> Compose </h2>

<%= form_tag message_rcompose_path do %>

	<p>
		<%= label_tag :title %><br>
		<%= text_area_tag :title %>
	</p>

	<p>
		<%= label_tag :text %><br>
		<%= text_area_tag :content %>
	</p>

	<%= hidden_field_tag :to, "to" %>	
	
	<p>
		<%= submit_tag "Send Message" %>
	</p>
	<%= link_to 'Inbox', message_inbox2_path %>
<% end %>
